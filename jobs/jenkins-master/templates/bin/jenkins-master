#!/bin/sh

export JAVA_HOME=/var/vcap/packages/oraclejdk
JAVA=${JAVA_HOME}/bin/java


export JAVA_OPTS=""
export JAVA_TOOL_OPTIONS="-Djava.awt.headless=true"

JENKINS=/var/vcap/jobs/jenkins-master/packages/jenkins/jenkins/jenkins_2.46.3.war
MEMORY_SETTINGS=""

export JENKINS_HOME=/var/vcap/store/jenkins-master
JENKINS_ARGS=""

echo "${JAVA} ${MEMORY_SETTINGS} ${JAVA_OPTS} -jar ${JENKINS} ${JENKINS_ARGS}"
${JAVA} ${MEMORY_SETTINGS} ${JAVA_OPTS} -jar ${JENKINS} ${JENKINS_ARGS}
