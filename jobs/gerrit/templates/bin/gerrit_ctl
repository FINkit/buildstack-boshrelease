#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/gerrit/helpers/ctl_setup.sh 'gerrit'

case $1 in

  start)
    if [ ! -f ${GERRIT_STORE}/etc/gerrit.config ]
    then
      mkdir -p ${GERRIT_STORE}/etc/
      cp /var/vcap/jobs/gerrit/config/gerrit.config ${GERRIT_STORE}/etc/gerrit.config
    fi

    echo "Running initialisation script" >> ${LOG_DIR}/${JOB_NAME}.log 2>&1
    ${JAVA} ${MEMORY_SETTINGS} ${JAVA_OPTS} -jar ${GERRIT} ${GERRIT_INIT_ARGS} >> ${LOG_DIR}/${JOB_NAME}.log 2>&1

    chown -R vcap:vcap ${GERRIT_STORE}

    exec chpst -u vcap:vcap ${GERRIT_STORE}/bin/gerrit.sh start \
       >>${LOG_DIR}/${JOB_NAME}.log 2>&1

    ;;

  stop)

    exec chpst -u vcap:vcap ${GERRIT_STORE}/bin/gerrit.sh stop \
       >>${LOG_DIR}/${JOB_NAME}.log 2>&1

    ;;

  *)
    echo "Usage: gerrit_ctl {start|stop}"

    ;;

esac
exit 0
