[gerrit]
	basePath = git
	canonicalWebUrl = http://localhost:8080/
[database]
    type = mysql
    hostname = <%= p('gerrit.mysql.host') %>
    database = <%= p('gerrit.mysql.database') %>
    username = <%= p('gerrit.mysql.username') %>
    url = jdbc:mysql://<%= p('gerrit.mysql.host') %>:3306/<%= p('gerrit.mysql.database') %>?useSSL=false
[index]
	type = LUCENE
[auth]
	type = OPENID
[receive]
	enableSignedPush = false
[sendemail]
	smtpServer = localhost
[container]
	user = vcap
	javaHome = /var/vcap/packages/oraclejdk/jre
[sshd]
	listenAddress = *:29418
[httpd]
	listenUrl = http://*:8080/
[cache]
	directory = cache
