check process jenkins-slave
  with pidfile /var/vcap/sys/run/jenkins-slave/jenkins-slave.pid
  start program "/var/vcap/jobs/jenkins-master/bin/monit_debugger jenkins-slave_ctl '/var/vcap/jobs/jenkins-slave/bin/ctl start'"
  stop program "/var/vcap/jobs/jenkins-master/bin/monit_debugger jenkins-slave_ctl '/var/vcap/jobs/jenkins-slave/bin/ctl stop'"
  group vcap
