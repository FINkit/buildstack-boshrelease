#!/bin/sh -e

export JAVA_HOME=/var/vcap/packages/oraclejdk
JAVA=${JAVA_HOME}/bin/java

export JAVA_OPTS=""
export JAVA_TOOL_OPTIONS="-Djava.awt.headless=true"

SWARM_VERSION=3.4
SWARM_CLIENT=/var/vcap/jobs/jenkins-slave/packages/swarm-client/jenkins/swarm-client-${SWARM_CLIENT}.jar
SWARM_ARGS="-deleteExistingClients -disableSslVerification -executors <%= p('jenkins.slave.executors') %> -labels \"<%= p('jenkins.slave.labels') %>\" -master <%= p('jenkins.slave.master_url') %> -mode <%= p('jenkins.slave.mode') %> -username <%= p('jenkins.slave.master_username') %> -password <%= p('jenkins.slave.master_password') %>"
MEMORY_SETTINGS=""

echo "${JAVA} ${MEMORY_SETTINGS} ${JAVA_OPTS} -jar ${SWARM_CLIENT} ${SWARM_ARGS}"
${JAVA} ${MEMORY_SETTINGS} ${JAVA_OPTS} -jar ${SWARM_CLIENT} ${SWARM_ARGS}
